<h3>All outstanding parts</h3>

<table class = "table">
    <tr>
        <th>Part number</th>
        <th>Description</th>
        <th>Quantity</th>
        <th></th>
    </tr>


<% @parts.each do |part| %>

    <tr>    
        <td><%= part.part_number %></td>
        <td><%= part.description %></td>
        <td><%= part.quantity %></td>
        <td><%= link_to 'Remove from list', part_path(part), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    
<% end %>

</table>