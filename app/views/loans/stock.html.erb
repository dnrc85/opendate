<% @title = "OD Dbase - Loan machines in stock" %>

<p id="notice"><%= notice %></p>

<div class = "title-spacing">
  <h2>Loan machines in stock</h2>
</div>

<%= link_to 'New stock loan machine entry', new_loan_path, class: "btn btn-primary" %></br>

<table class = "table">
  <thead>
    <tr>
      <th>Printer</th>
      <th>Serial number</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.where(:shipped_date => "").each do |loan| %>
        <tr>
          <td><%= loan.printer %></td>
          <td><%= loan.serial_number %></td>
          <td><%= link_to 'Edit machine details', edit_loan_path(loan), class: "link_to" %></td>
          <td><%= link_to 'Delete', loan, method: :delete, data: { confirm: 'Are you sure?' }, class: "link_to" %></td>
        </tr>
    <% end %>
  </tbody>
</table>