<%= form_for(@loan) do |f| %>
  <% if @loan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
      <% @loan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class = "jumbotron">
    
    <div class = "col-md-6">
      <%= f.label :customer %></br>
      <%= f.text_field :customer %></br>
      
      <%= f.label :contact_name %></br>
      <%= f.text_field :contact_name %></br>
      
      <%= f.label :tel_number %></br>
      <%= f.text_field :tel_number %></br>
      
      <%= f.label :address %></br>
      <%= f.text_area :address %></br>
    </div>

    <div class = "col-md-6">
      <%= f.label :printer %></br>
      <%= f.select :printer, Printer.all.map { |f| f.name } %>
      <%= f.text_field :serial_number, placeholder: "Serial number" %></br>
      
      <%= f.label :psu_type, "Power supply" %></br>
      <%= f.select :psu_type, Psu.all.map { |f| f.psu_type } %>
      <%= f.text_field :psu_serial_number, placeholder: "Serial number" %></br>
  
      <%= f.label :shipped_date %></br>
      <%= f.text_field :shipped_date, placeholder: 'dd/mm/yy' %></br>
      
      <%= f.label :details, "Reason for loan/other details" %></br>
      <%= f.text_area :details %></br>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
    
  </div>
<% end %>
